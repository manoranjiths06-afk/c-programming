#include<iostream>
using namespace std;
int main()
{
    int num;
    cout<<"enter an integer:";
    cin>>num;
    if (num!=0){
        if (num>0){
            cout<<"the number is positive"<<endl;
        
    }else{
        cout<<"the number is negative"<<endl;
    }
    }else{
        cout<<"the number is 0 nither positive or negative"<<endl;
    }
    cout<<"this number is always printed"<<endl;
    return 0;
}
